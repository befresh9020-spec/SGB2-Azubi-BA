document.addEventListener("DOMContentLoaded", () => {
  const toggle = document.getElementById("themeToggle");
  if (!toggle) {
    console.error('Kein Button mit id="themeToggle" gefunden.');
    return;
  }

  const body = document.body;

  // gespeichertes Theme prÃ¼fen
  const savedTheme = localStorage.getItem("theme");
  if (savedTheme === "dark") {
    body.classList.add("dark-mode");
    toggle.textContent = "â˜€ï¸ Hellmodus";
  } else {
    toggle.textContent = "ğŸŒ™ Dunkelmodus";
  }

  // Klick-Event
  toggle.addEventListener("click", () => {
    const isDark = body.classList.toggle("dark-mode");
    toggle.textContent = isDark ? "â˜€ï¸ Hellmodus" : "ğŸŒ™ Dunkelmodus";
    localStorage.setItem("theme", isDark ? "dark" : "light");
  });
});