// theme.js.neu
document.addEventListener("DOMContentLoaded", () => {
  const toggle = document.getElementById("themeToggle");
  if (!toggle) {
    console.error('Theme-Toggle-Button mit id="themeToggle" nicht gefunden.');
    return;
  }

  const body = document.body;

  // Gespeicherten Zustand anwenden (unabhÃ¤ngig vom System)
  const savedTheme = localStorage.getItem("theme"); // "dark" | "light" | null
  if (savedTheme === "dark") {
    body.classList.add("dark-mode");
    toggle.textContent = "â˜€ï¸ Hellmodus";
  } else {
    // Light ist Default
    body.classList.remove("dark-mode");
    toggle.textContent = "ğŸŒ™ Dunkelmodus";
  }

  // Klick-Event
  toggle.addEventListener("click", () => {
    const isDark = body.classList.toggle("dark-mode");
    toggle.textContent = isDark ? "â˜€ï¸ Hellmodus" : "ğŸŒ™ Dunkelmodus";
    localStorage.setItem("theme", isDark ? "dark" : "light");
  });
});